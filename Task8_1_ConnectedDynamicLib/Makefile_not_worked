CC := gcc

BIN := calculator
SRC := $(wildcard *.c)
OBJ_MAIN := *main*.o

FPICFLAG := -fPIC
DYNLIBFLAG := -ldl
SHAREDFLAG := -shared

DEBUGFLAG := -g

.PHONY: clean

$(BIN): $(OBJ_MAIN)
	echo "1"
	$(CC) $< -o $@ $(DYNLIBFLAG)

COMP_LIBS: *.so
	echo "2"
	#find . -name "*.c" -not -name "*main*.c" > comp_libs.txt
	#$(CC) $(DEBUGFLAG) -c $(FPICFLAG) 

$(OBJ_MAIN):
	echo "3"
	$(CC) $(DEBUGFLAG) *main*.c -c

%.so : %.o
	echo "4"
	$(CC) $^ $(SHAREDFLAG) -o $@

%.o : %.c
	echo "5"
	$(CC) $(DEBUGFLAG) -c $(FPICFLAG) $^

	#gcc -g -c -fPIC 8_1_add.c 8_1_sub.c 8_1_mul.c 8_1_div.c
	#gcc -shared -o libcalc_add.so 8_1_add.o 
	#gcc -shared -o libcalc_sub.so 8_1_sub.o 
	#gcc -shared -o libcalc_mul.so 8_1_mul.o 
	#gcc -shared -o libcalc_div.so 8_1_div.o 
	#gcc -g 8_1_main.c -o calculator -ldl

clean:
	rm -rf $(BIN) *.o *.so
